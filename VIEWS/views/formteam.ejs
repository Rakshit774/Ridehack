    <script>
        function handle_click(event) {
            window.location.href = `/teams?value=${event}`;
        }

        function filterDomains() {
            const input = document.getElementById('search');
            const filter = input.value.toLowerCase();
            const container = document.getElementById('domain-container');
            const boxes = container.getElementsByClassName('option-box');

            for (let i = 0; i < boxes.length; i++) {
                let text = boxes[i].innerText || boxes[i].textContent;
                if (text.toLowerCase().indexOf(filter) > -1) {
                    boxes[i].style.display = '';
                } else {
                    boxes[i].style.display = 'none';
                }
            }
        }

        // Fade effect for the heading
        window.onload = () => {
            const heading = document.querySelector('h2');
            heading.classList.add('fade-in');
        };
    </script>
