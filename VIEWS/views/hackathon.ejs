<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HackAI - Dell and NVIDIA Challenge</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/hackathon.css">
</head>
<body>
    <!-- Hero Section -->
    <header>
        <div class="logo">
            <img src="logo.jpg.jpeg" alt="BrainBridges Logo">
            <h3>BrainBridges</h3>
        </div>
        <nav>
            <a href="#">Home</a>
            <a href="profile.html">My Profile</a>
            <a href="messages.html">Messages</a>
            <a href="#">Requests</a>
            <a href="#">Info</a>
            <a href="about.html">About Us</a>
            <a href="partnership.html">Settings</a>
        </nav>
        <div class="login-signup-button">
            <!-- <a href="/login"><button class="login-button">Login</button></a>
            <a href="/signup"><button class="signup-button">Signup</button></a> -->
            <button>
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="35" fill="black" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
              </svg>
            </button>
        </div>
    </header>

    <div class="hero-image"></div>
    <div class="hero-content">
        <div class="hackathon-info">
            <h1><%=hackathon.eventName%></h1>
            <p><%= hackathon.eventTheme %></p>
            <p>By <%= hackathon.organizationName %>!</p>

            <a href="<%= hackathon.eventAddress %>" class="join-button">Join Us</a>
        </div>
        <div class="details-box">
            <h3>Event Details</h3>
            <p><i class="fas fa-portrait"></i> Organized By: <%= hackathon.organizationName %></p>
            <p><i class="fas fa-calendar-alt"></i> Start: <%= hackathon.eventStartDate %></p>
            <p><i class="fas fa-hourglass-end"></i> End: <%= hackathon.eventStartDate %></p>
            <p><i class="fas fa-trophy"></i> Prize: <%= hackathon.prize %></p>
            <p><i class="fas fa-globe"></i> Event Type: <%= hackathon.eventType %></p>
        </div>
    </div>

    <!-- Header (becomes sticky after scrolling) -->
    <header class="header">
        <h2><%= hackathon.eventName %></h2>
        <!-- <span class="deadline">Deadline: 3 Oct 2024 @ 5:30am GMT+5:30</span> -->
        <a href="<%= hackathon.websiteAddress %>" class="join-button">Join Us</a>
    </header>

    <!-- Main Content -->
    <div class="container">
        <section class="info-section">
            <div class="info-content">
                <h2><%= hackathon.eventTheme %></h2>
               <p><%= hackathon.about %></p>
            </div>
            <div class="sidebar">
                <div class="info-box">
                    <!-- <h3>Contact Organizer</h3>
                    <p><i class="fas fa-envelope"></i> <a href="mailto:organizer@hackai.com">organizer@hackai.com</a></p> -->
                    <h3>Event Enquiries Email</h3>
                    <p><i class="fas fa-envelope"></i> <a href="<%= hackathon.eventEnquiriesEmail %>"><%= hackathon.eventEnquiriesEmail %></a></p>

                </div>
                <div class="prize-item">
                    <i class="fas fa-trophy"></i>
                    <h3>First Prize</h3>
                    <p><%= hackathon.prize %></p>
                </div>
            </div>
        </section>
    </div>

    <script>
        // Sticky header
        window.onscroll = function() {stickyHeader()};
        var header = document.querySelector('.header');
        var sticky = header.offsetTop;
        function stickyHeader() {
            if (window.pageYOffset > sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }
    </script>
</body>
</html>